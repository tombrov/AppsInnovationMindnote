<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/cardBackgroundAlt"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Match NotesAdapter.java -> dateText -->
        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June 30, 2025"
            android:textSize="14sp"
            android:textColor="@color/textTertiary"
            android:layout_marginBottom="4dp" />

        <!-- Match NotesAdapter.java -> noteText -->
        <TextView
            android:id="@+id/notePreviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today I felt grateful for..."
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="8dp" />

        <!-- Match NotesAdapter.java -> entryImage -->
        <ImageView
            android:id="@+id/entryImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- These are unused by NotesAdapter, but safe to keep for future use -->
        <TextView
            android:id="@+id/noteTagsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#gratitude #family"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/noteMoodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Š"
            android:textSize="18sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
