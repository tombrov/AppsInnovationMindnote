<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 📷 Camera declared as optional to avoid Play Store filter issues -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- 🔐 Permissions -->
    <!-- Scoped media access for Android 13+ -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Compatibility for Android 12 and below -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Firebase / Glide / general connectivity -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Camera usage (user profile or journal photo uploads) -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MindNoteApp"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MindNote">

        <!-- Auth flow -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" android:exported="true" />
        <activity android:name=".SetDisplayNameActivity" android:exported="false" />

        <!-- Main app experience -->
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".JournalActivity" android:exported="false" />
        <activity android:name=".EntryDetailActivity" android:exported="false" />
        <activity android:name=".NotesActivity" android:exported="false" />
        <activity android:name=".CalendarActivity" android:exported="false" />
        <activity android:name=".ProfileActivity" android:exported="false" />

    </application>
</manifest>
